<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#65B891">

    <include layout="@layout/top_bar"/>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Cuisine - Paris"
            android:textSize="25dp" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#B5FFE1"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:background="@drawable/escargot" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/gardener" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:backgroundTint="@color/backgroundGreen"
                        app:cardCornerRadius="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/escargot_question"
                            android:textColor="@color/black" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ELetter"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:text="E"
                    android:textColor="@color/backgroundGreen"
                    android:textSize="50dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/ELetterUnder"
                    android:layout_width="40dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/primaryGreen" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/SLetter"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:text="S"
                    android:textColor="@color/backgroundGreen"
                    android:textSize="50dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/SLetterUnder"
                    android:layout_width="40dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/darkGrey" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/CLetter"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:text="C"
                    android:textColor="@color/backgroundGreen"
                    android:textSize="50dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/CLetterUnder"
                    android:layout_width="40dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/darkGrey" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ALetter"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:text="A"
                    android:textColor="@color/backgroundGreen"
                    android:textSize="50dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/ALetterUnder"
                    android:layout_width="40dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/darkGrey" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/RLetter"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:text="R"
                    android:textColor="@color/backgroundGreen"
                    android:textSize="50dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/RLetterUnder"
                    android:layout_width="40dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/darkGrey" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/GLetter"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:text="G"
                    android:textColor="@color/backgroundGreen"
                    android:textSize="50dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/GLetterUnder"
                    android:layout_width="40dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/darkGrey" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/OLetter"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:text="O"
                    android:textColor="@color/backgroundGreen"
                    android:textSize="50dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/OLetterUnder"
                    android:layout_width="40dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/darkGrey" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TLetter"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:text="T"
                    android:textColor="@color/backgroundGreen"
                    android:textSize="50dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/TLetterUnder"
                    android:layout_width="40dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/darkGrey" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/T"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_margin="2dp"
                    android:backgroundTint="@color/secondaryGreen"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="T"
                        android:textColor="@color/black"
                        android:textSize="25dp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/RCard"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_margin="2dp"
                    android:backgroundTint="@color/secondaryGreen"
                    app:cardCornerRadius="5dp">

                    <TextView
