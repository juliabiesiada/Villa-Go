<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/backgroundGreen">

    <include layout="@layout/top_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/singer"/>
        <FrameLayout
            android:layout_height="100dp"
            android:layout_width="250dp"
            android:layout_marginTop="70dp">
            <ImageView
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:background="@drawable/speech_bubble"
                android:backgroundTint="@color/white"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:textSize="14.5dp"
                android:textColor="@color/black"
                android:text="@string/completeSong_instructions"/>
        </FrameLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primaryGreen"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/playIcon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/ic_play"
            android:layout_gravity="center"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primaryGreen"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        android:elevation="50dp">
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:text="\' Allons enfants de"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/drop1"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="@color/secondaryGreen"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="20dp"
                        android:text=""
                        android:textColor="@color/black"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text=","
                    android:textColor="@color/black"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:text="Le jour"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/drop2"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="@color/secondaryGreen"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="20dp"
                        android:text=""
                        android:textColor="@color/black"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:text="est arrivé! \'"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/appetit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/secondaryGreen"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="l'appétit"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/deGloire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/secondaryGreen"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="240dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="de gloire"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/papetrie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/secondaryGreen"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="130dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="papetrie"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/terroir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/secondaryGreen"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="300dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="terroir"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/deCroire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/secondaryGreen"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="-15dp"
        android:layout_marginLeft="70dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="de croire"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/laPatrie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/secondaryGreen"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="190dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="la patrie"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/laFratrie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/secondaryGreen"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="260dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="la fratrie"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/devoir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/secondaryGreen"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="devoir"/>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/confirmButton"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_purple"
            android:textColor="@color/white"
            android:text="Confirm"
            android:layout_marginEnd="30dp"/>

        <Button
            android:id="@+id/restartButton"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_purple"
            android:textColor="@color/white"
            android:text="Restart"/>

    </LinearLayout>
</LinearLayout>